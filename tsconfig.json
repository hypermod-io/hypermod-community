{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "target": "es6",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "es5",
      "scripthost",
      "es2015.core",
      "es2015.collection",
      "es2015.symbol",
      "es2015.iterable",
      "es2015.promise",
      "es2016",
      "es2017"
    ]
  },
  "include": ["packages/**/*", "community/**/*", "scripts"],
  "exclude": ["./node_modules", "./plugin_packages"]
}
