  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "target": "es6",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "scripthost"]
  },
  "include": ["packages/**/*", "community/**/*", "scripts"],
  "exclude": ["./plugin_packages"]
}
